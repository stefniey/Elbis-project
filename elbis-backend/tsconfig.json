{
  "compilerOptions": {
      "target": "es6",                     // or a higher version
      "module": "commonjs",
      "experimentalDecorators": true,      // Enable experimental support for decorators
      "emitDecoratorMetadata": true,       // Enable metadata for decorators
      "strict": true,                       // Enable strict type checking options
      "esModuleInterop": true,              // Allow default imports from modules with no default export
      "skipLibCheck": true,                 // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
          "*": ["node_modules/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
